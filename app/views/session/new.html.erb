<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title"><%= t ".login_to_continue" %></h1>
            <div class="account-wall">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">
                <%= form_for @login, url: login_post_path, html: { class: "form-signin" } do |f| %>
                    <%= f.email_field :email, class: "form-control", placeholder: t(".email") %>
                    <%= f.password_field :password, class: "form-control", placeholder: t(".password") %>
                    <label class="checkbox" for="login_remember">
                        <%= f.check_box :remember %>
                        <%= t '.remember' %>
                    </label>
                    <%= f.submit t(".login"), class: "btn btn-lg btn-primary btn-block" %>
                    <br/>
                    <a href="<%= register_user_path %>" class="">
                        <%= t ".create_new_account" %>
                    </a>
                    <a href="#" class="pull-right">
                        <%= t ".need_help" %>
                    </a>
                <% end %>
            </div>
        </div>
    </div>
</div>