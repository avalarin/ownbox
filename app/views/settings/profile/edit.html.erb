<%= bt_panel header: t('.page_header') do %>
  <%= validation_errors @user %>
  <%= bt_form_for @user, url: settings_update_profile_path, method: :patch do |f| %>
    <%= f.group property: :name, label: t('.name') do |g| %>
      <%= g.text_input %>
    <% end %>
    <%= f.group property: :email, label: t('.email') do |g| %>
      <%= g.text_input %>
    <% end %>
    <%= f.group property: :display_name, label: t('.display_name') do |g| %>
      <%= g.text_input %>
    <% end %>
    <%= f.group do |g| %>
      <%= g.submit_button style: :primary, text: t("commands.save") %>
    <% end %>
  <% end %>
<% end %>