<% content_for :content do %>
  <div class="row">
    <div class="col-md-3">
      <div class="list-group">
        <%= link_with_icon t('.profile'), "user", settings_edit_profile_path, "class" => "list-group-item" %>
        <%= link_with_icon t('.shares'), "folder", "", "class" => "list-group-item" %>
        <%= link_with_icon t('.security'), "shield", "", "class" => "list-group-item" %>
      </div>
    </div>
    <div class="col-md-9">
      <% content_for :messages do '' end %>
      <%= render 'layouts/messages' %>
      <%= yield %>
    </div>
  </div>
<% end %>
<% @hide_messages = true %>
<%= render template: "layouts/application" %>