<div class="page-header">
  <h1><%= t '.page_header' %></h1>
</div>

<%= validation_errors @user %>

<%= form_for @user, url: create_user_path, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <label for="user_name" class="col-sm-2 control-label"><%= t(".name") %></label>
    <div class="col-sm-4">
      

      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="user_display_name" class="col-sm-2 control-label"><%= t(".display_name") %></label>
    <div class="col-sm-4">
      <%= f.text_field :display_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="user_email" class="col-sm-2 control-label"><%= t(".email") %></label>
    <div class="col-sm-4">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="user_password" class="col-sm-2 control-label"><%= t(".password") %></label>
    <div class="col-sm-4">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <!-- <label for="user_password_confirmation" class="col-sm-2 control-label"><%= t(".password_confirmation") %></label> -->
    <div class="col-sm-offset-2 col-sm-4">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <%= f.submit t("commands.register"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>